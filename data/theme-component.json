{
  "id": "theme-component",
  "name": "ThemeComponent",
  "repository": "https://github.com/101digital/tomato-pay-react-native-theme-component.git#appStudio/1.0.1",
  "dependencies": [
    {
      "name": "@react-native-async-storage/async-storage",
      "version": "^1.15.5"
    },
    {
      "name": "react-native-localize",
      "version": "^2.1.1"
    },
    {
      "name": "react-native-svg",
      "version": "^12.1.1"
    }
  ],
  "templates": [
    {
      "id": "button-group-template",
      "templateName": "Home Screen",
      "componentName": "ThemeComponent",
      "imports": [
        "$component-imports"
      ],
      "headers": [],
      "renders": [
        "        <>",
        "            $component-name",
        "        </>"
      ],
      "functions": []
    },
    {
      "id": "carousel-template",
      "templateName": "Home Screen",
      "componentName": "ThemeComponent",
      "imports": [
        "$component-imports",
        "import { ScrollView } from 'react-native';"
      ],
      "headers": [],
      "renders": [
        "        <View style={styles.listAccountItemSection} testID='account-details-container'>",
        "          <ScrollView style={{paddingHorizontal:15}} horizontal={true} showsHorizontalScrollIndicator={false}>",
        "              $carousel-items",
        "          </ScrollView>",
        "        </View>"
      ],
      "functions": [],
      "styles": [
        "  horizontalSpacing: { width: 12 },",
        "  listAccountItemSection: {",
        "    paddingVertical: 0,",
        "  },",
        "  cardItemWrapper: {",
        "    // borderRadius: 24,",
        "    width: 350,",
        "    paddingRight:15,",
        "  }"
      ]
    },
    {
      "id": "progress-circle-template",
      "templateName": "Progress Circle",
      "componentName": "ProgressCircleComponent",
      "imports": [
        "$component-imports"
      ],
      "headers": [],
      "renders": [
        "        <>",
        "            $component-name",
        "        </>"
      ],
      "functions": []
    }
  ],
  "texts": {
    "common": {
      "lbl_error": "Something went wrong",
      "msg_error": "We are experiencing some temporary difficulties. Please try again later or contact our support team.",
      "btn_confirm": "OK",
      "btn_cancel": "Cancel",
      "msg_error_id": "(Error: %s)",
      "btn_next": "Next"
    },
    "country_picker": {
      "lbl_select_country": "Select a country",
      "plh_search_country": "Search country"
    },
    "date_picker": {
      "btn_close": "Close",
      "btn_done": "Done",
      "lbl_select_date": "Select Date",
      "lbl_select_date_range": "Select A Date Range",
      "btn_apply_date_range": "Apply",
      "btn_cancel_date_range": "Cancel"
    },
    "image_picker": {
      "msg_loading_picker": "Please waiting...",
      "msg_allow_file_type": "Allowed file types are PNG and JPG/JPEG",
      "msg_max_file_size": "Maximum file size should be 2MB",
      "msg_allow_access_camera": "Allow Application To Access Your Camera",
      "msg_turn_camera_setting": "Tap Open Settings and turn on Camera to allow access.",
      "btn_cancel": "Cancel",
      "btn_open_setting": "Open Settings",
      "msg_allow_access_photo": "Allow Application To Access Your Photos",
      "msg_turn_photo_setting": "Tap Open Settings and turn on Photos to allow access",
      "btn_take_photo": "Take photo",
      "btn_choose_photo": "Choose photo"
    }
  }
}
